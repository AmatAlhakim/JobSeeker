@using Microsoft.AspNet.Identity
@using JobSeeker.Resources

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm(JobSeekerResources.LogOff, "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        var context = new ApplicationDbContext();
        var UserId = User.Identity.GetUserId();
        var currentUser = context.Users.Where(p => p.Id == UserId).SingleOrDefault();
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="bi bi-person-fill"></i>
                    <strong>Hello: @currentUser.UserName</strong>
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <p class="text-center">
                                        <span class="bi bi-person-fill"></span>
                                    </p>
                                </div>
                                <div class="col-lg-8">
                                    <p class="text-right">
                                        <strong>@currentUser.UserName</strong>
                                    </p>
                                    @if (currentUser.UserType.Contains("Publisher"))
                                    {
                                        <a href="#" class="btn btn-success">Jobs You Published</a>
                                    }
                                    else if (currentUser.UserType.Contains("Seeker"))
                                    {
                                        <a href="#" class="btn btn-success">Jobs You Applied For</a>
                                    }
                                    <a href="#" class="btn bnt-primary btn-block">Edit Account </a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="dropdown-divider"></li>
                    <li>
                        <div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger btn-block">Log off</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </li>
            @* <li>
                    @Html.ActionLink(JobSeekerResources.Hello+" "+ User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
        </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item">
            <a href="/Account/Login" class="nav-link active">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                </svg>
                <i class="glyphicon glyphicon-user">@JobSeekerResources.Login</i>
            </a>
        </li>

        <li class="nav-item">
            <a href="/Account/Register" class="nav-link active">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-lock-fill" viewBox="0 0 16 16">
                    <path d="M7 6a1 1 0 0 1 2 0v1H7V6zM6 8.3c0-.042.02-.107.105-.175A.637.637 0 0 1 6.5 8h3a.64.64 0 0 1 .395.125c.085.068.105.133.105.175v2.4c0 .042-.02.107-.105.175A.637.637 0 0 1 9.5 11h-3a.637.637 0 0 1-.395-.125C6.02 10.807 6 10.742 6 10.7V8.3z" />
                    <path d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm-2 6v1.076c.54.166 1 .597 1 1.224v2.4c0 .816-.781 1.3-1.5 1.3h-3c-.719 0-1.5-.484-1.5-1.3V8.3c0-.627.46-1.058 1-1.224V6a2 2 0 1 1 4 0z" />
                </svg>
                <i class="glyphicon glyphicon-lock">@JobSeekerResources.Register</i>
            </a>
        </li>
    </ul>
}
