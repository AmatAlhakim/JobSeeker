@model JobSeeker.Models.JobApplication

@{
    ViewBag.Title = "EditApplication";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Edit Your Job Application For @Html.DisplayFor(model => model.job.JobTitle)</h2>

@using (Html.BeginForm("EditApplication", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <h4>Edit Application</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.JobId)
    @Html.HiddenFor(model => model.UserId)

    <div class="form-group" style="padding-bottom:10px;">
        <b>
            @Html.LabelFor(model => model.user.UserName, "User Name", htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10" style="padding-left:25px;">
            @Model.user.UserName
        </div>
    </div>

    <div class="form-group" style="padding-top:10px;padding-bottom:10px;">
        <b>
            @Html.LabelFor(model => model.job.JobTitle, "Job Title", htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10" style="padding-left:25px;">
            @Model.job.JobTitle
        </div>
    </div>

    <div class="form-group" style="padding-top:10px;padding-bottom:10px;">
        <b>
            @Html.LabelFor(model => model.job.JobDescription, "Job Description", htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10" style="padding-left:25px;">
            @Html.Raw(HttpUtility.HtmlDecode(Html.Display(Model.job.JobDescription).ToString()))
        </div>
    </div>

    <div class="form-group" style="padding-top:10px;padding-bottom:10px;">
        <b>
            @Html.LabelFor(model => model.job.JobImage, "Job Image", htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10" style="padding-left:25px;">
            <img src="~/Uploads/@Html.DisplayFor(model => model.job.JobImage)"
                 alt="Job Image"
                 class="img-thumbnail"
                 style="width:100px; height:100px;" />
        </div>
    </div>

    <div class="form-group" style="padding-top:10px;padding-bottom:10px;">
        <b>
            @Html.LabelFor(model => model.job.JobStatus, "Job Status", htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10" style="padding-left:25px;">
            @Model.job.JobStatus
        </div>
    </div>

    <div class="form-group" style="padding-top:10px;padding-bottom:10px;">
        <b>
            @Html.LabelFor(model => model.ApplicationDate, "Application Date", htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10" style="padding-left:25px;">
            @Model.ApplicationDate
        </div>
    </div>

    <div class="form-group" style="padding-top:10px;padding-bottom:10px;">
        <b>
            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
        </b>
        <div class="col-md-10" style="padding-left:25px;">
            @Html.EditorFor(model => model.Message, "Application Message", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding-top: 10px;padding-bottom:5px;">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-info" />
            <span style="padding-left:10px;">@Html.ActionLink("Back to List", "GetJobsByUserId", "Home", null, new { @class = "btn btn-dark" })</span>
        </div>
    </div>
</div>
}

