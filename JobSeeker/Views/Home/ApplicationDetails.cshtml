@model JobSeeker.Models.JobApplication

@{
    ViewBag.Title = "ApplicationDetails";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>ApplicationDetails</h2>

<div style="margin:20px;" class="JobDetails">
    <h4 style="color:darkblue; padding-top:10px;">@Html.DisplayFor(model => model.job.JobTitle)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.job.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.job.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.user.UserType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.user.UserType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Message)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicationDate)
        </dd>
    </dl>

    @using (Html.BeginForm("Apply", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Edit" class="btn btn-secondary" /> |
            @Html.ActionLink("Back To List", "GetJobsByUserId", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
